@model IEnumerable<Difficulty_Learning.Models.Course>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-info">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Course_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course_UserID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course_CategoryID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course_Path)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Course_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course_UserID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category_Course.CategoryCourse_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course_Path)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Course_ID }, htmlAttributes: new { @class = "btn btn-info" })
                @Html.ActionLink("Delete", "Delete", new { id = item.Course_ID }, htmlAttributes: new { @class = "btn btn-info" })
            </td>
        </tr>
}
    </tbody>
</table>
